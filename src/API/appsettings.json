{
  "OpenTelemetry": {
    "ServiceName": "MyApp",
    "ServiceVersion": "1.0.0",
    "EnvironmentName": "Production",
    "ActivitySourceName": "MyApp.ActivitySource",
    "AspNetCoreInstrumentation": {
      "IsEnabled": true,
      "PathStartsWithExcludeFilters": "swagger;scalar",
      "RecordException": true
    },
    "HttpClientInstrumentation": {
      "IsEnabled": true,
      "IncludeRequestBody": true,
      "IncludeResponseBody": true
    },
    "ExporterSettings": {
      "ExportToConsole": true,
      "OtelSettings": {
        // "Uri": "http://otel-collector:4317",
        // "IsHttpProtobuf": true,
        // "Headers": "Authorization=Bearer token"
      }
    }
  },
  "Jwt": {
    "Key": "MyVeryStrongAndSecureSecretKey123456", // En az 256 bit uzunluÄŸunda bir gizli anahtar
    "Issuer": "https://localhost:7030",
    "Audience": "YourAudience",
    "ExpireMinutes": 60
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "PostgreSQL": "User ID=root;Password=password;Host=localhost;Port=5432;Database=postgres;"
  },
  "MessageBroker": {
    "Host": "",
    "Username": "",
    "Password": ""
  }
}
